generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
  nonBinary
  other
  preferNotToSay
}

model User {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  email              String   @unique
  password           String
  firstName          String?
  lastName           String?
  dateOfBirth        DateTime?
  city               String?
  state              String?
  usersGender        Gender?
  interestedInGender Gender?
  profession         String?
  profilePhoto       String? 
  about              String?
  matches            String[] @db.ObjectId
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  from      String   @db.ObjectId
  to        String   @db.ObjectId
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
